// Test with more complexity like mini_zork
world {
    room west_of_house "West of House" {
        desc: "You are standing in an open field west of a white house."

        object mailbox {
            names: ["mailbox", "box"]
            desc: "A small mailbox."
            openable: true
            container: true
        }
    }

    room north_of_house "North of House" {
        desc: "You are facing the north side of a white house."
    }

    room south_of_house "South of House" {
        desc: "You are facing the south side of a white house."
    }
}

fn look_around() {
    print("Look around called - testing complex world");
    list_objects(player.location);
}

fn list_objects(location) {
    print("List objects called with location:");
    if location == west_of_house {
        print("SUCCESS: Got west_of_house in list_objects");
    } else {
        print("FAILURE: Got wrong location in list_objects");
    }
}

init {
    // Set up exactly like mini_zork
    player.location = west_of_house;

    print("Starting complex world test");
    look_around();
    print("Test complete");
}