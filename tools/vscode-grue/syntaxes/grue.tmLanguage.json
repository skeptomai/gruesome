{
  "name": "Grue",
  "scopeName": "source.grue",
  "fileTypes": ["grue"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#parameters"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.grue",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.grue",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.grue",
              "match": "\\\\([\\\\\"/nrt])"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.grue",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.grue",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "name": "variable.parameter.grue",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*|\\$[0-9]+",
          "captures": {
            "0": {
              "name": "punctuation.definition.variable.grue"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.grue",
          "match": "\\b(world|room|object|grammar|verb|fn|init|contains|names|desc|description|properties|exits)\\b"
        },
        {
          "name": "keyword.control.grue",
          "match": "\\b(if|else|while|for|in|return|let|var)\\b"
        },
        {
          "name": "keyword.other.event.grue",
          "match": "\\b(on_enter|on_exit|on_look)\\b"
        },
        {
          "name": "support.function.builtin.grue",
          "match": "\\b(print|print_ret|new_line|move|player|location|mode)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.grue",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.grue",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.grue",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.grue",
          "match": "="
        },
        {
          "name": "keyword.operator.ternary.grue",
          "match": "[?]"
        },
        {
          "name": "keyword.operator.safe-access.grue",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.arrow.grue",
          "match": "=>"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.begin.grue",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.block.end.grue",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.array.begin.grue",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.grue",
          "match": "\\]"
        },
        {
          "name": "punctuation.definition.group.begin.grue",
          "match": "\\("
        },
        {
          "name": "punctuation.definition.group.end.grue",
          "match": "\\)"
        },
        {
          "name": "punctuation.terminator.statement.grue",
          "match": ";"
        },
        {
          "name": "punctuation.separator.key-value.grue",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.grue",
          "match": ","
        },
        {
          "name": "punctuation.accessor.dot.grue",
          "match": "\\."
        }
      ]
    }
  }
}